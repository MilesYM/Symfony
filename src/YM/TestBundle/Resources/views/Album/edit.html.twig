{# src/YM/TestBundle/Resources/views/Album/add.html.twig #}
 
{% extends "YMTestBundle::layout.html.twig" %}

{% block bodyAdmin %}

<div class="container">
	<form action="{{ path('ymtest_EditAlbum', {'id': album.id}) }}" method="post" {{ form_enctype(form) }}>
		<div class="row">
			{% if form_errors(form)|length != 0 %}
				<div class="span12 alert alert-error" style="margin-left:0px">
					{# Generic form errors #}
					{{ form_errors(form) }}
				</div>
			{% endif %}
		</div>
	

		<div class="row">
			<div class="span10 BoxesW">
				<div>
					{{ form_label(form.name, "Album Name") }}
					{{ form_errors(form.name) }}
					{{ form_widget(form.name) }}
				</div>
				<div>
					{{ form_label(form.songs, "Album review and Songs") }}
					{{ form_errors(form.songs) }}
					{{ form_widget(form.songs, {'attr':{'class': 'span10' }, 'id': 'wysiwyg' }) }}
				</div>
				</br>
				{{ form_rest(form) }}
				</br>
				<div>
					<input type="submit" class="btn btn-primary" />
				</div>
			</div>
		</div>
	</form>
</div>

{% endblock %}