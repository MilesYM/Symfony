{# src/YM/TestBundle/Resources/views/layout.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}Admin Dashboard - {{ parent() }}{% endblock %}

{% block links %}{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styleAdmin.css') }}" type="text/css" />
{% endblock %}

{% block scripts %}{{ parent() }}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('editor/ckeditor.js') }}"></script>
    <script type="text/javascript">
    window.onload = function()
    {
      CKEDITOR.replace( 'wysiwyg',
      {
        skin : 'office2003'
      });
    };
    </script>
{% endblock %}


{% block body %}

  <!-- On affiche à présent le Header -->

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('ymtest_dashboard') }}">
                    <img src="{{ asset('images/logo/logo.png') }}" id="logo" alt="New Heights"/></a>

                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-user"></i> Admin
                        <span class="caret"></span>
                    </a>

                    <ul class="dropdown-menu">
                        <li><a href="{{ path('fos_user_security_logout') }}">Sign Out</a></li>
                    </ul>
                </div>

                <div class="nav-collapse">
                    <ul class="nav"  id="navMenu">
                        <li class="active"><a href="{{ path('ymtest_dashboard') }}">Dashboard</a></li>
                        <li><a href="{{ path('ymtest_Album') }}">Albums</a></li>
                        <li><a href="{{ path('ymtest_Artist') }}">Artists</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    {% block bodyAdmin %}

    {% endblock %}
    
    <script>
        $(document).ready(function() {
            $('.container .delete').on('click', function() {
                var $this = $(this),
                    url = $this.data('url'),
                    message = $this.data('message');
                
                if (confirm(message)) { // Clic sur OK
                    document.location.href=url;
            }
            });
        });
    </script>

{% endblock %}